apiVersion: v1
kind: ConfigMap
metadata:
  name: user-workload-monitoring-config
  namespace: openshift-user-workload-monitoring
data:
  config.yaml: |
    prometheus:
      volumeClaimTemplate:
        spec:
          storageClassName: {{ _oc_monitoring_persist_sc }}
          volumeMode: Filesystem
          resources:
            requests:
              storage: {{ _oc_monitoring_persist_size_gb }}Gi